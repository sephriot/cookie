#: include picture.kv
#: include pictureview.kv

<Cookie>:
    canvas.before:
        Color:
            rgb: (0.9, 0.9, 0.9)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y

    PictureView:
        id: picture_view
        size_hint: 0.47, 0.8
        pos_hint: {'x': 0.02, 'y': 0.02}

        Picture:
            id: picture
            source: 'img/153060008_882649488979447_7659123131314854157_n.jpg'

    Widget:
        size_hint: 0.47, 0.8
        pos_hint: {'x': 0.51, 'y': 0.02}
